<h1>
  Movie #<%= @the_movie.id %> details
</h1>

<div>
  <a href="/movies">
    Go back
  </a>
</div>

<div>
  <a href="/delete_movie/<%= @the_movie.id %>">
    Delete movie
  </a>
</div>

<hr>
<form action="/modify_movie/<%= @the_movie.id %>" method="patch">
  <div>
    <label for="query_title">
      Title
    </label>

    <input type="text" id="query_title" name="query_title" value="<%= @the_movie.title %>">
  </div>

  <div>
    <label for="query_year">
      Year
    </label>

    <input type="text" id="query_year" name="query_year" value="<%= @the_movie.year %>">
  </div>

  <div>
    <label for="query_duration">
      Duration
    </label>

    <input type="text" id="query_duration" name="query_duration" value="<%= @the_movie.duration %>">
  </div>

  <div>
    <label for="query_description">
      Description
    </label>

    <textarea id="query_description" name="query_description" rows="3">"<%=@the_movie.description%>"</textarea>
  </div>

  <div>
    <label for="image_box">
      Image
    </label>

    <input type="text" id="image_box" name="query_image" value="<%=@the_movie.image %>">
  </div>

  <div>
    <label for="query_director_id">
      Director ID
    </label>

    <input type="text" id="query_director_id" name="query_director_id" value="<%= @the_movie.director_id %>">
  </div>

  <button>
    Update movie
  </button>
</form>

</form>

<hr>

<dl>
  <dt>
    Title
  </dt>
  <dd>
    <%= @the_movie.title %>
  </dd>

  <dt>
    Year
  </dt>
  <dd>
    <%= @the_movie.year %>
  </dd>

  <dt>
    Duration
  </dt>
  <dd>
    <%= @the_movie.duration %>
  </dd>

  <dt>
    Description
  </dt>
  <dd>
    <%= @the_movie.description %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="<%= @the_movie.image %>" style="width:250px;">
  </dd>

  <dt>
    Director
  </dt>
  <dd>
   <% if @the_movie.director != nil %>
      <%= @the_movie.director.name %>
    <% else %>
    Uh oh!. We aren't able to find a director for this movie
    <%end%>
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= time_ago_in_words(@the_movie.created_at) %> ago
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= time_ago_in_words(@the_movie.updated_at) %> ago
  </dd>
</dl>

<hr>
